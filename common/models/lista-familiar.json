{
  "name": "ListaFamiliar",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "productos": {
      "type": "hasMany",
      "model": "Producto",
      "foreignKey": ""
    },
    "usuarios": {
      "type": "hasMany",
      "model": "Usuario",
      "foreignKey": ""
    },
    "propietario": {
      "type": "belongsTo",
      "model": "Usuario",
      "foreignKey": "owner"
    },
    "solicitudes": {
      "type": "hasAndBelongsToMany",
      "model": "Usuario",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "solicitar"
    }
  ],
  "methods": {
    "prototype.solicitar": {
      "accepts": [
        {
          "arg": "contexto",
          "type": "object",
          "required": true,
          "description": "con context se le pasa el id del usuario",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "solicitud",
          "type": "object",
          "root": true,
          "description": "solicitud"
        }
      ],
      "description": "crea una relaci√≥n entre el usuario que solicita entrar a una lista y la lista",
      "http": [
        {
          "path": "/solicitar",
          "verb": "post"
        }
      ]
    }
  }
}
